@model BasicLesson
@using TutoSearch.Models

@{
    ViewData["Title"] = "Delete Basic Lesson";
}
<div class="row mt-3">
    <div class="card col-md-8 offset-2">
        <div class="card-body">
            <h5 class="card-title">Confirmación de eliminación para: @Model.Title</h5>

            <!-- Horizontal Form -->
            <div class="text-center mb-2">
                <video controls preload="auto" class="rounded" style="max-width: 200px;" id="VideoPreview"></video>
            </div>
            <div class="row mb-3">
                <label asp-for="VideoURL" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="VideoURL" type="text" class="form-control" readonly>
                    <span asp-validation-for="VideoURL" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Title" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Title" type="text" class="form-control" readonly>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="ProfessorId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <!--<select asp-for="ProfessorId" class="form-select">
                        <option selected>Seleccione el profesor</option>
                    </select>-->
                    <input asp-for="ProfessorId" type="text" class="form-control" readonly>
                    <span asp-validation-for="ProfessorId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="Description" class="form-control" readonly></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Mostrar Todos</a>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Confirmar" class="btn btn-danger" />
                </form>
            </div>
            <!-- End Horizontal Form -->
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('VideoPreview');
            output.src = $("#VideoURL").val();
        })
    </script>
}

