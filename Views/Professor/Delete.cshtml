@model Professor

@{
    ViewData["Title"] = "Delete Professor";
}
<div class="row mt-3">
    <div class="card col-md-8 offset-2">
        <div class="card-body">
            <h5 class="card-title">Confirmación de eliminación para: @Model.FullName</h5>
            <!-- Horizontal Form -->
            <div class="text-center mb-2">
                <img class="rounded" style="max-width: 100px;" id="ProfilePicturePreview" />
            </div>
            <div class="row mb-3">
                <label asp-for="ProfilePictureURL" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ProfilePictureURL" type="text" class="form-control" readonly>
                    <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="FullName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="FullName" type="text" class="form-control" readonly>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Bio" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="Bio" class="form-control" readonly></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Mostrar Todos</a>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Confirmar" class="btn btn-danger" />
                </form>
            </div>
            <!-- End Horizontal Form -->
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
    </script>
}