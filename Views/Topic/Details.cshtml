@model Topic
@using TutoSearch.Data.Enum

@{
    ViewData["Title"] = "Topic Details";
}
<div class="row mt-3">
    <div class="card col-md-8 offset-2">
        <div class="card-body">
            <h5 class="card-title">Detalles del Tema</h5>

            <!-- Horizontal Form -->
            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" type="text" class="form-control" readonly>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="Description" class="form-control" readonly></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="TopicSubject" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="TopicSubject" type="text" class="form-control" readonly>
                    <span asp-validation-for="TopicSubject" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Mostrar Todos</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Editar</a>
            </div>
            <!-- End Horizontal Form -->
        </div>
    </div>
</div>
