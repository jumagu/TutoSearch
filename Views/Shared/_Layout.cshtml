@using TutoSearch.Data.Static;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TutoSearch</title>
    <link rel="shortcut icon" href="~/icon.svg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TutoSearch.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand nav-tutos" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/tutosearchlogo-ico.png" class="ts-icon" /> <span class="tuto-search">TutoSearch</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Lesson" asp-action="Index"><i class="fa-solid fa-person-chalkboard"></i> Clases</a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa-solid fa-gear"></i> Administrar
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-controller="Topic" asp-action="Index"><i class="fa-solid fa-shapes"></i> Temas</a>
                                    <a class="dropdown-item" asp-controller="Professor" asp-action="Index"><i class="fa-solid fa-user-tie"></i> Profesores</a>
                                    <a class="dropdown-item" asp-controller="BasicLesson" asp-action="Index"><i class="fa-solid fa-cubes"></i> Clases Básicas</a>
                                    <a class="dropdown-item" asp-controller="ExpertLesson" asp-action="Index"><i class="fa-solid fa-brain"></i> Clases Expertas</a>
                                </div>
                            </li>
                        }

                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form class="d-flex" asp-controller="Lesson" asp-action="Filter">
                            <input name="searchString" type="text" class="form-control" placeholder="Buscar una clase " aria-label="Search box" aria-describedby="button-addon2" />
                            &nbsp;
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                        </form>
                    }
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - TutoSearch - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>-->

    <footer>
        <div class="contenedor-footer">
            <div class="content-foo">
                <h4>Teléfono</h4>
                <p>31432587995</p>
            </div>
            <div class="content-foo">
                <h4>Email</h4>
                <p>tutosearch@gmail.com</p>
            </div>
            <div class="content-foo">
                <h4>Ubicación</h4>
                <p>Tunja, Boyacá</p>
            </div>
        </div>
        <h2 class="titulo-final">TutoSearch</h2>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
