@page
@model ResendEmailConfirmationModel

@{
    ViewData["Title"] = "Reenviar la confirmación por correo electrónico";
}

<main class="form-signin w-100 m-auto">
    <form method="post" class="d-flex flex-column align-items-center">
        <img class="mb-4" src="~/tutosearchlogo.png" alt="" width="100" height="100">
        <h1 class="h3 mb-3 fw-normal text-center">Ingrese su correo electrónico</h1>
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-floating w-100">
            <input asp-for="Input.Email" type="email" class="form-control" style="border-radius: 0.25rem; margin-bottom: 10px;" autocomplete="username" aria-required="true" id="floatingInput" placeholder="name@example.com">
            <label asp-for="Input.Email" class="form-label" for="floatingInput">Correo electrónico</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Reenviar</button>
        <p class="mt-4 mb-3 text-muted">© 2022</p>
    </form>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
